{
  "name": "litoshow",
  "displayName": "litoshow",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:newlitoshow.testStatus",
    "onCommand:litoshow.createMacro",
    "onCommand:litoshow.saveMacro",
    "onCommand:newlitoshow.refreshMacro",
    "onCommand:litoshow.playMacro",
    "onCommand:litoshow.selectMacro",
    "onCommand:litoshow.removeMacro",
    "onCommand:litoshow.insertStop",
    "onCommand:newlitoshow.viewPlayer",
    "onView:litoshow-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Litoshow",
      "properties": {
        "litoshow.actionsPerSecond": {
          "type": "number",
          "default": 50,
          "description": "Specifies how many sequences of actions will be played per second (max 1000)",
          "maxLength": "4",
          "minimum": "1",
          "maximum": 1000
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "litoshow-sidebar-view",
          "title": "Litoshow",
          "icon": "media/litoshow-white.svg"
        }
      ],
      "panel": []
    },
    "views": {
      "litoshow-sidebar-view": [
        {
          "type": "webview",
          "id": "litoshow-sidebar",
          "name": "Macros",
          "icon": "media/replay.svg",
          "contextualTitle": "Litoshow"
        },
        {
          "type": "webview",
          "id": "litoshow-macro-stop-points-webview",
          "name": "Stop points",
          "contextualTitle": "Litoshow"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "newlitoshow.refreshAll",
          "when": "view == litoshow-sidebar",
          "group": "navigation"
        }
      ],
      "view/item/context": []
    },
    "commands": [
      {
        "command": "newlitoshow.refreshWebviews",
        "category": "Litoshow",
        "title": "Refresh Webviews"
      },
      {
        "command": "litoshow.createMacro",
        "category": "Litoshow",
        "title": "Create Macro"
      },
      {
        "command": "litoshow.saveMacro",
        "category": "Litoshow",
        "title": "Save Macro"
      },
      {
        "command": "litoshow.removeMacro",
        "category": "Litoshow",
        "title": "Remove Macro",
        "icon": "media/trash.svg"
      },
      {
        "command": "newlitoshow.refreshMacro",
        "category": "Litoshow",
        "title": "Refresh",
        "icon": "media/refresh.svg"
      },
      {
        "command": "litoshow.selectMacro",
        "category": "Litoshow",
        "title": "Choose Macro",
        "icon": "media/play.svg"
      },
      {
        "command": "litoshow.playMacro",
        "category": "Litoshow",
        "title": "Play Macro"
      },
      {
        "command": "litoshow.pauseMacro",
        "category": "Litoshow",
        "title": "Pause Macro"
      },
      {
        "command": "newlitoshow.refreshAll",
        "category": "Litoshow",
        "title": "Refresh"
      },
      {
        "command": "newlitoshow.viewPlayer",
        "category": "Litoshow",
        "title": "View Player"
      },
      {
        "command": "litoshow.updateClientList",
        "category": "Litoshow",
        "title": "Update Client List"
      },
      {
        "command": "litoshow.insertStop",
        "category": "Litoshow",
        "title": "Insert Stop"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vite:build": "vite build --watch"
  },
  "devDependencies": {
    "@types/react": "17.0.2",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.67.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4",
    "ts-loader": "^9.2.8",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "@vscode/test-electron": "^2.1.3",
    "vite": "2.9.9",
    "@vitejs/plugin-react": "1.3.2",
    "@rollup/plugin-alias": "3.1.9",
    "@types/uuid": "8.3.4",
    "postcss": "8.4.14",
    "autoprefixer": "10.4.7",
    "@heroicons/react": "1.0.6"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "module-alias": "^2.2.2",
    "uuid": "8.3.2",
    "rc-slider": "10.0.0",
    "tailwindcss": "3.0.24",
    "@headlessui/react": "1.6.5",
    "p-queue": "7.2.0",
    "@szhsin/react-menu": "3.1.1",
    "fs-extra": "7.0.0",
    "@vscode/webview-ui-toolkit": "1.0.0"
  },
  "_moduleAliases": {
    "@componentes": "out",
    "@pages": "out"
  }
}
